# FoodVision AI - Environment Configuration
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# AI SERVICE API KEYS
# =============================================================================

# OpenAI API Key (for GPT-4 nutrition analysis)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic API Key (for Claude nutrition analysis)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Google Gemini API Key (for Gemini Pro analysis)
# Get your key at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Cohere API Key (for text analysis)
# Get your key at: https://dashboard.cohere.ai/api-keys
COHERE_API_KEY=your-cohere-api-key-here

# Hugging Face API Key (for open-source models)
# Get your key at: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# Google Vision API Key (for advanced image analysis)
# Get your key at: https://console.cloud.google.com/apis/credentials
GOOGLE_VISION_API_KEY=your-google-vision-api-key-here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Flask Environment
FLASK_ENV=development
FLASK_DEBUG=True

# Application Secret Key (change this in production!)
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database Configuration
DATABASE_URL=sqlite:///foodvision.db

# Upload Configuration
MAX_CONTENT_LENGTH=33554432  # 32MB in bytes
UPLOAD_FOLDER=uploads

# Cache Configuration
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=3600

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================

# AI Processing Settings
AI_CONFIDENCE_THRESHOLD=0.3
AI_MAX_PREDICTIONS=5
AI_CACHE_ENABLED=true
AI_CACHE_DURATION_HOURS=24

# Model Selection
PRIMARY_MODEL=mobilenet_v2
ENSEMBLE_MODELS=mobilenet_v2,resnet50,inception_v3
TEXT_MODEL=blip

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/Disable Features
ENABLE_VOICE_CONTROL=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_AI_INSIGHTS=true
ENABLE_RECIPE_GENERATION=true
ENABLE_MEAL_PLANNING=true
ENABLE_OFFLINE_MODE=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email Service (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Cloud Storage (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1

# Analytics (optional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Session Configuration
SESSION_TIMEOUT_MINUTES=60
REMEMBER_COOKIE_DURATION_DAYS=30

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log File Configuration
LOG_FILE=logs/foodvision.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Mode Settings
DEV_MODE=true
DEBUG_TOOLBAR=true
PROFILER_ENABLED=false

# Testing Configuration
TESTING=false
TEST_DATABASE_URL=sqlite:///test_foodvision.db

# =============================================================================
# PRODUCTION SETTINGS (uncomment for production)
# =============================================================================

# FLASK_ENV=production
# FLASK_DEBUG=False
# DATABASE_URL=postgresql://user:password@localhost/foodvision
# REDIS_URL=redis://localhost:6379/0
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# MONITORING & PERFORMANCE
# =============================================================================

# Performance Monitoring
ENABLE_PROFILING=false
SLOW_QUERY_THRESHOLD=1.0

# Health Check Settings
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=300

# Metrics Collection
COLLECT_METRICS=true
METRICS_ENDPOINT=/metrics

# =============================================================================
# SOCIAL FEATURES
# =============================================================================

# Social Platform Settings
ENABLE_USER_REGISTRATION=true
ENABLE_SOCIAL_LOGIN=false
ENABLE_FRIEND_SYSTEM=true
ENABLE_CHALLENGES=true

# Content Moderation
ENABLE_CONTENT_MODERATION=true
AUTO_MODERATE_POSTS=false

# =============================================================================
# MOBILE APP SETTINGS
# =============================================================================

# PWA Configuration
PWA_ENABLED=true
PUSH_NOTIFICATIONS_ENABLED=true
OFFLINE_CACHE_ENABLED=true

# Mobile API Settings
MOBILE_API_VERSION=v2
MOBILE_MIN_VERSION=2.0.0

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================

# Backup Settings
AUTO_BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="FoodVision AI is currently under maintenance. Please check back soon!"

# =============================================================================
# INTERNATIONALIZATION
# =============================================================================

# Language Settings
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,zh,ja,ko
ENABLE_AUTO_TRANSLATE=false

# Timezone Settings
DEFAULT_TIMEZONE=UTC
AUTO_DETECT_TIMEZONE=true

# =============================================================================
# ADVANCED AI FEATURES
# =============================================================================

# AI Enhancement Settings
ENABLE_IMAGE_ENHANCEMENT=true
ENABLE_PORTION_ESTIMATION=true
ENABLE_CONTEXT_ANALYSIS=true
ENABLE_NUTRITION_PREDICTION=true

# AI Model Updates
AUTO_UPDATE_MODELS=false
MODEL_UPDATE_INTERVAL_DAYS=7

# =============================================================================
# NOTES
# =============================================================================

# 1. Replace all "your-*-here" values with actual credentials
# 2. Keep this file secure and never commit it to version control
# 3. Use strong, unique passwords and API keys
# 4. Regularly rotate your API keys for security
# 5. In production, use environment-specific values
# 6. Consider using a secrets management service for production